@media (min-width: 1264px)
	.landing-step-2
		background-position-x: 85%

@media (max-width: 1100px)
	.contact-account-container
		.form-image
			img
				width: 27em
				right: 8%
				top: 19em
	.solution-information-container
		.solution-information
			.information-item-container
				.information-item
					&-content
						width: 85%			
					&-text
						font-size: 1.3em
					.title-sub-section
						font-size: 2em

@media (max-width: 1024px)
	.landing-step-1
		.solution-title
			font-size: 2em
	.landing-step-4
		background-position-x: 94%
		background-size: 23em

@media (max-width: 960px)
	.landing
		padding: 1em 2em
	.landing-step-1
		background-size: 50%
		.landing-step-1-container
			background-size: 28em
			background-image: none
			position: relative
			&:before
				content: ''
				display: block
				position: absolute
				left: 0
				top: 0
				width: 100%
				height: 100%
				background-image: url('../img/landing/world_loans_connect.png')
				opacity: 0.5
				background-repeat: no-repeat
				-ms-background-size: cover
				background-size: 28em
				background-position-x: right
				background-position-y: bottom				
		.platforms-list
			.platforms-list-content
				width: 100%
				flex-wrap: wrap
				figure
					width: auto
					img
						width: 11em
	.landing-step-2
		background-size: 19em
		background-position-y: 50%
		.logo-container figure
			width: 16em
		.first-line
			font-size: 1.1em

@media (max-width: 870px)
	.landing-step-1
		.solution-title
			font-size: 1.8em
	.solution-information-container
		.solution-information
			.information-item-container
				.information-item
					.information-image-container
						img
							width: 20em
	.solution-information-container
		.solution-information
			.information-item-container
				.information-item
					&-content
						width: 100%			

@media (max-width: 768px)
	.landing-step-2
		background-image: none
	.landing-step-4
		background-size: 18em
		background-position-y: 65%
		&-title
			font-size: 1.8em
	.solution-information-container
		.solution-information
			background-size: 115% 76%

@media (max-width: 740px)
	.landing-step-1		
		.platforms-list
			.platforms-list-content
				flex-wrap: nowrap
				flex-direction: row
				justify-content: flex-start
				overflow-x: auto
	.landing-step-2
		.first-line
			width: 100%

@media (max-width: 630px)
	.landing-step-3
		.landing-step-3-container
			.first-line
				font-size: 1.6em
				width: auto
			.second-line
				font-size: 1.1em
				width: auto
				margin-bottom: 2em

@media (max-width: 599px)
	.landing-step-4
		background-image: none
		text-align: center
	.solution-information-container
		.solution-information
			.information-item-container
				margin: 1em 0;
				.information-item
					&.item-reverse
						flex-direction: column-reverse
					&-content
						padding: 0 15px
					&-text
						font-size: 1.2em
					.title-sub-section
						font-size: 1.8em
			.information-image-container
				margin-top: 1em